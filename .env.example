# Local development environment variables
# Copy to .env and adjust as needed

# MongoDB connection string (no auth for local dev)
MONGODB_URI=mongodb://localhost:27017/meta

# Redis connection string
REDIS_URL=redis://localhost:6379

# Encryption
# 32 bytes encoded as 64 hex characters (AES-256-GCM)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Meta/Facebook API Credentials
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_API_VERSION=v21.0

# Meta OAuth Configuration
META_REDIRECT_URI=http://localhost:3000/api/auth/callback/facebook

# Meta Webhooks Configuration
META_VERIFY_TOKEN=your_random_secure_token_here
META_WEBHOOK_SECRET=your_meta_app_secret_here

# Local MCP server (Model Context Protocol) - used for development and CI experiments
# The MCP server listens on this port; default for local dev is 5005
MCP_PORT=5005
